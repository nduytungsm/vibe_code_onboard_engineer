# Production Environment Variables for Repository Analyzer

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NODE_ENV=production
GIN_MODE=release
PORT=8080

# Domain Configuration (replace with your actual domain)
DOMAIN=your-domain.com

# Database URLs (if you add database later)
# DATABASE_URL=postgresql://user:password@localhost/repo_analyzer

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=500
RATE_LIMIT_REQUESTS_PER_DAY=10000
CONCURRENT_WORKERS=6

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# File Processing
MAX_FILE_SIZE_MB=10
CHUNK_SIZE_TOKENS=3000
