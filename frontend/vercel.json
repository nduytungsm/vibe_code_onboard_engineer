{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://13.239.135.39:8080/api/:path*"
    }
  ],
  "functions": {
    "frontend/src/api/stream-proxy.js": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/api/analyze/stream",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Connection",
          "value": "keep-alive"
        },
        {
          "key": "Content-Type",
          "value": "text/event-stream"
        }
      ]
    }
  ]
}
